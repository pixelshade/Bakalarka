<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shade.pixel.gpsoclient.ItemInfoActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/itemNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Epic item"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/itemInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info about the item."
        android:textSize="24dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/itemImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemImageView"
        android:src="@drawable/no_image_512x512"
        android:layout_below="@+id/itemNameText"
        android:paddingTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
